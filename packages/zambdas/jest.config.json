{
  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
  },
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "testMatch": ["**/src/**/*.test.ts"],
  "setupFiles": ["./src/test.setup.ts"],
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "**/src/**/*.ts",
    "!**/dist/**"
  ]
}
