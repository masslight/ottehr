{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "start": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".dist/**"]
    },
    "ci-deploy": {
      "dependsOn": ["build", "lint"]
    },
    "ci-deploy:demo": {
      "dependsOn": ["build", "lint"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": [
        "apps/**/*.tsx",
        "apps/**/*.ts",
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ]
    },
    "lint": {},
    "integration:zambdas": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "e2e:login": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "e2e:specs:ui": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "e2e:specs": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
